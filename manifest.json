{
  "manifest_version":2,
  "name": "Otter Cart",
  "description": "",
  "version":"1.0",
  "browser_action": {
    "default_icon": "ottercarticon.png",
    "default_popup": "ottercart.html"
  },
  "permissions": [
    "activeTab",
    "https://ajax.googleapis.com/",
    "geolocation"
  ],
  "content_scripts": [
    {
      "matches": [
        "<all_urls>"
      ],
      "js": ["distance.js"]
    }
  ],
  "background": {
    "scripts": ["locate.js"]
  },
  "content_security_policy": "script-src 'self' https://maps.googleapis.com; object-src 'self'"
}
